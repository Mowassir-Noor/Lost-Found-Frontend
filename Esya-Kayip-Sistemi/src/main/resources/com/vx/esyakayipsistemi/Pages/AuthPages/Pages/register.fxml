<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx/fxml/1" fx:controller="com.vx.esyakayipsistemi.Controller.AuthController.RegisterController" stylesheets="@../Styles/register_view.css">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" styleClass="vbox-container">
            <children>
                <ImageView fx:id="logoImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label-title" text="HOŞ GELDİNİZ" wrappingWidth="300.0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="label-title" text="Gazi Üniversitesi Kayıp Eşya Sistemi" wrappingWidth="300.0">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Text>
                <TextField fx:id="usernameField" promptText="Kullanıcı Adı" styleClass="text-field" />
                <TextField fx:id="emailField" promptText="Email" styleClass="text-field" />
                <PasswordField fx:id="passwordField" promptText="Şifre" styleClass="text-field" />
                <Button mnemonicParsing="false" text="Kayıt Ol" styleClass="button" onAction="#handleRegister" />
                <Button mnemonicParsing="false" text="Geri" styleClass="button" onAction="#handleBack" />
            </children>
        </VBox>
    </children>
</AnchorPane>